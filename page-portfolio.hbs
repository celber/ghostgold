{{!< default}}

{{#contentFor "head"}}
    <link rel="stylesheet" href="{{ asset "styles/post.css"}}"/>
{{/contentFor}}

{{#contentFor "header"}}
    <header>
        <div class="header-inner">
            <div class="description">
                {{@site.description}}
            </div>
            <div class="name">
                {{@site.title}}
            </div>
            <div class="page">
                PORTFOLIO
            </div>
            <div class="separator">

            </div>
        </div>
    </header>
    <style>
        header {
            background: transparent url({{@site.cover_image}}) center bottom/cover repeat scroll;
        }
    </style>
{{/contentFor}}

{{#contentFor "content"}}
    {{#post}}
            <div class="mb-80"></div>
            <article class="portfolio {{post_class}}">
                <div class="content">
                    {{content}}
                </div>
            </article>
            <div class="mb-80"></div>
    {{/post}}

    <script type="application/javascript">
        Macy({
            container: document.querySelector('.portfolio .content'),
            trueOrder: true,
            mobileFirst: true,
            margin: 24,
            columns: 1,
            breakAt: {
                940: 3,
                520: 2
            }
        });
    </script>
{{/contentFor}}